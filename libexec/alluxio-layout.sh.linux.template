#!/usr/bin/env bash

export TACHYON_SYSTEM_INSTALLATION="TRUE"
export TACHYON_PREFIX="/var/lib/alluxio"
export TACHYON_HOME=${TACHYON_PREFIX}
export TACHYON_CONF_DIR="/etc/alluxio"
export TACHYON_LOGS_DIR="/var/log/alluxio"
export TACHYON_DATA_DIR="/var/run/alluxio"

# generate via mvn dependency:build-classpath
# export TACHYON_JAR=""

if [ -z "JAVA_HOME" ]; then
  export JAVA="/usr/bin/java"
else
  export JAVA="$JAVA_HOME/bin/java"
fi