<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.tachyonproject</groupId>
    <artifactId>tachyon-integration-tests</artifactId>
    <version>0.7.0-SNAPSHOT</version>
  </parent>
  <artifactId>tachyon-integration-tests-glusterfs</artifactId>
  <name>Tachyon Integration Tests - Gluster FS</name>
  <description>Runs the integration tests against a Gluster FS under file system, since this requires an appropriate environment this is configured and activated via a profile</description>

  <properties>
    <license.header.path>${project.parent.parent.basedir}/build/license/</license.header.path>
    <checkstyle.path>${project.parent.parent.basedir}/build/checkstyle/</checkstyle.path>
    <findbugs.path>${project.parent.parent.basedir}/build/findbugs/</findbugs.path>

    <!-- Use these to set your GlusterFS environment for testing -->
    <glusterfs.mounts />
    <glusterfs.volumes />
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.tachyonproject</groupId>
      <artifactId>tachyon-integration-test-cases</artifactId>
      <version>${project.version}</version>
      <classifier>tests</classifier>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <profiles>

    <profile>
      <id>glusterfsTest</id>
      <dependencies>
        <dependency>
          <groupId>org.tachyonproject</groupId>
          <artifactId>tachyon-underfs-glusterfs</artifactId>
          <version>${project.version}</version>
          <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>org.gluster</groupId>
          <artifactId>glusterfs-hadoop</artifactId>
          <version>${glusterfs-hadoop.version}</version>
          <scope>test</scope>
        </dependency>
      </dependencies>

      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-enforcer-plugin</artifactId>
            <version>1.4</version>
            <executions>
              <execution>
                <id>enforce-glusterfs-settings</id>
                <goals>
                  <goal>enforce</goal>
                </goals>
                <configuration>
                  <rules>
                    <requireProperty>
                      <property>glusterfs.mounts</property>
                      <message>Property glusterfs.mounts must be set to provide your Gluster FS Mounts</message>
                      <regex>.+</regex>
                      <regexMessage>Property glusterfs.mounts must be set to provide your Gluster FS Mounts</regexMessage>
                    </requireProperty>
                    <requireProperty>
                      <property>glusterfs.volumes</property>
                      <message>Property glusterfs.mounts must be set to provide your Gluster FS Volumes</message>
                      <regex>.+</regex>
                      <regexMessage>Property glusterfs.mounts must be set to provide your Gluster FS Volumes</regexMessage>
                    </requireProperty>
                  </rules>
                  <fail>true</fail>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>2.18.1</version>
            <configuration>
              <argLine>-Djava.security.krb5.realm= -Djava.security.krb5.kdc=</argLine>
              <!-- Pull in integration tests from test-cases module -->
              <dependenciesToScan>
                <dependency>org.tachyonproject:tachyon-integration-test-cases</dependency>
              </dependenciesToScan>
              <systemPropertyVariables>
                <ufs>tachyon.underfs.glusterfs.GlusterFSCluster</ufs>
                <glusterfs.mounts>${glusterfs.mounts}</glusterfs.mounts>
                <glusterfs.volumes>${glusterfs.volumes}</glusterfs.volumes>
              </systemPropertyVariables>
            </configuration>
            <executions>
              <execution>
                <id>default-test</id>
                <phase>test</phase>
                <goals>
                  <goal>test</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>