<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.tachyonproject</groupId>
    <artifactId>tachyon-integration-tests</artifactId>
    <version>0.7.0-SNAPSHOT</version>
  </parent>
  <artifactId>tachyon-integration-tests-s3</artifactId>
  <name>Tachyon Integration Tests - S3</name>
  <description>Runs the integration tests against an S3 file system, since this requires a specific S3 account to run against these must be specifically configured and activated by a profile</description>

  <properties>
    <license.header.path>${project.parent.parent.basedir}/build/license/</license.header.path>
    <checkstyle.path>${project.parent.parent.basedir}/build/checkstyle/</checkstyle.path>
    <findbugs.path>${project.parent.parent.basedir}/build/findbugs/</findbugs.path>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.tachyonproject</groupId>
      <artifactId>tachyon-integration-test-cases</artifactId>
      <version>${project.version}</version>
      <classifier>tests</classifier>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>s3Test</id>
      <dependencies>
        <dependency>
          <groupId>org.tachyonproject</groupId>
          <artifactId>tachyon-underfs-s3</artifactId>
          <version>${project.version}</version>
          <scope>test</scope>
        </dependency>
      </dependencies>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-surefire-plugin</artifactId>
            <version>2.18.1</version>
            <configuration>
              <argLine>-Djava.security.krb5.realm= -Djava.security.krb5.kdc=</argLine>
              <!-- Pull in integration tests from test-cases module -->
              <dependenciesToScan>
                <dependency>org.tachyonproject:tachyon-integration-test-cases</dependency>
              </dependenciesToScan>
              <ufs>tachyon.underfs.s3.S3UnderStorageCluster</ufs>
              <!-- Change "myAccessKey" to your access key for this test -->
              <accessKey>myAccessKey</accessKey>
              <!-- Change "mySecreteKey" to your secrete key for this test -->
              <secretKey>mySecretKey</secretKey>
              <!-- Change "s3n://my-bucket/tachyon-test" to the name of your S3 bucket for this test -->
              <s3Bucket>s3n://my-bucket/tachyon-test</s3Bucket>
            </configuration>
            <executions>
              <execution>
                <id>default-test</id>
                <phase>test</phase>
                <goals>
                  <goal>test</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>