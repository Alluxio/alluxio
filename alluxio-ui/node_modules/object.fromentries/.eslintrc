{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"max-statements-per-line": [2, { "max": 2 }],
		"max-statements": [2, 22],
		"new-cap": [2, {
			"capIsNewExceptions": [
				"CreateDataPropertyOrThrow",
				"Get",
				"GetIterator",
				"IsArray",
				"IteratorStep",
				"IteratorClose",
				"IteratorValue",
				"ThrowCompletion",
				"ToPropertyKey",
				"Type",
				"RequireObjectCoercible",
			],
		}],
	},
}
