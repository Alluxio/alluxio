SCRIPT_DIR="$(cd "$(dirname "$(readlink "$0" || echo "$0")")"; pwd)"

get_env() {
  DEFAULT_LIBEXEC_DIR="${SCRIPT_DIR}"/../../../libexec
  ALLUXIO_LIBEXEC_DIR=${ALLUXIO_LIBEXEC_DIR:-${DEFAULT_LIBEXEC_DIR}}
  . ${ALLUXIO_LIBEXEC_DIR}/alluxio-config.sh

  ALLUXIO_CSI_JAR=${SCRIPT_DIR}/../target/alluxio-integration-csi-${VERSION}-jar-with-dependencies.jar
  CLASSPATH=${CLASSPATH}:${ALLUXIO_CSI_JAR}
}

check_csi_jar() {
  if ! [[ -f ${ALLUXIO_CSI_JAR} ]]; then
    echo "Cannot find ${ALLUXIO_CSI_JAR}. Please compile alluxio with csi profile and Java 8"
    return 1
  else
    return 0
  fi
}

start_csi_client() {
  local cmd="${JAVA} -cp ${CLASSPATH} ${JAVA_OPTS} ${ALLUXIO_CSI_JAVA_OPTS} \
    alluxio.csi.client.CsiClientImpl $@"
  exec ${cmd}
}

start_csi_server() {
  if [[ ${NO_DAEMON} -eq "1" ]]; then
    ALLUXIO_CSI_JAVA_OPTS+=" -Dalluxio.logger.type=CSI_LOGGER,Console"
  fi

  local cmd="${JAVA} -cp ${CLASSPATH} ${JAVA_OPTS} ${ALLUXIO_CSI_JAVA_OPTS} \
    alluxio.csi.CsiServer"
  echo "Starting Alluxio CSI process"

  if [[ ${NO_DAEMON} -eq "1" ]]; then
    exec ${cmd}
  else
    (nohup ${cmd} > ${ALLUXIO_LOGS_DIR}/csi.out 2>&1) &
    # sleep: workaround to let the bg java process exit on errors, if any
    sleep 2s
    if kill -0 $! > /dev/null 2>&1 ; then
      echo "Successfully started Alluxio csi."
      echo "See ${ALLUXIO_LOGS_DIR}/csi.log for logging messages"
      return 0
    else
      echo "Failed to start Alluxio csi"
      echo "See ${ALLUXIO_LOGS_DIR}/csi.out for more details"
      return 1
    fi
  fi
}

USAGE_MSG="Usage:\n\talluxio-csi [server|client]"

if [[ $# -lt 1 ]]; then
  echo -e "${USAGE_MSG}" >&2
  exit 1
fi

get_env
check_csi_jar
if [[ $? -ne 0 ]]; then
  exit 1
fi

case $1 in
  server)
    shift
    start_csi_server "$@"
    ;;
  client)
    shift
    start_csi_client "$@"
    ;;
  *)
    echo -e "${USAGE_MSG}" >&2
    exit 1
    ;;
esac
