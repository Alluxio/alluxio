apiVersion: v1
kind: Service
metadata:
  name: alluxio-master-0
  labels:
    app: alluxio
spec:
  ports:
  - port: 19998
    name: rpc
  - port: 19999
    name: web
  - port: 19200
    name: embedded
  clusterIP: None
  selector:
    app: alluxio-master-0
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: alluxio-master-0
spec:
  selector:
    matchLabels:
      app: alluxio-master-0
  serviceName: "alluxio-master-0"
  replicas: 1
  template:
    metadata:
      labels:
        app: alluxio-master-0
    spec:
      securityContext:
        fsGroup: 1000
      containers:
      - name: alluxio-master
        image: alluxio/alluxio:2.1.0-SNAPSHOT
        imagePullPolicy: IfNotPresent
        resources:
          limits:
            cpu: 1
            memory: 1G
          requests:
            cpu: 1
            memory: 1G
        securityContext:
          runAsUser: 1000
          runAsGroup: 1000
        command: ["/entrypoint.sh"]
        args: ["master-only", "--no-format"]
        env:
          - name: ALLUXIO_MASTER_JAVA_OPTS
            value: " -Dalluxio.master.hostname=alluxio-master-0 "
          - name: ALLUXIO_USER_JAVA_OPTS
            value: " -Dalluxio.master.hostname=alluxio-master-0 "
        envFrom:
        - configMapRef:
            name: alluxio-config
        ports:
        - containerPort: 19998
          name: rpc
        - containerPort: 19999
          name: web
        - containerPort: 19200
          name: embedded
        volumeMounts:
        - name: alluxio-journal
          mountPath: /journal
      - name: alluxio-job-master
        image: alluxio/alluxio:2.1.0-SNAPSHOT
        imagePullPolicy: IfNotPresent
        resources:
          limits:
            cpu: 1
            memory: 1024M
          requests:
            cpu: 1
            memory: 1024M
        securityContext:
          runAsUser: 1000
          runAsGroup: 1000
        command: ["/entrypoint.sh"]
        args: ["job-master"]
        env:
        - name: ALLUXIO_JOB_MASTER_JAVA_OPTS
          value: " -Dalluxio.master.hostname=alluxio-master-0 "
        - name: ALLUXIO_USER_JAVA_OPTS
          value: " -Dalluxio.master.hostname=alluxio-master-0 "
        envFrom:
        - configMapRef:
            name: alluxio-config
        ports:
        - containerPort: 20001
          name: job-rpc
        - containerPort: 20002
          name: job-web
      restartPolicy: Always
      volumes:
      - name: alluxio-journal
        emptyDir: {}
---
