apiVersion: v1
kind: Service
metadata:
  name: alluxio-master-0
  labels:
    app: alluxio
spec:
  ports:
  - port: 19998
    name: rpc
  - port: 19999
    name: web
  clusterIP: None
  selector:
    name: alluxio-master-0
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: alluxio-master-0
  labels:
    app: alluxio
spec:
  selector:
    matchLabels:
      name: alluxio-master-0
  serviceName: "alluxio-master-0"
  replicas: 1
  template:
    metadata:
      labels:
        name: alluxio-master-0
        app: alluxio
    spec:
      securityContext:
        fsGroup: 1000
      containers:
      - name: alluxio-master
        image: alluxio/alluxio:2.1.0-SNAPSHOT
        imagePullPolicy: IfNotPresent
        resources:
          limits:
            cpu: 1
            memory: 1G
          requests:
            cpu: 1
            memory: 1G
        securityContext:
          runAsUser: 1000
          runAsGroup: 1000
        command: ["/entrypoint.sh"]
        args: ["master-only", "--no-format"]
        envFrom:
        - configMapRef:
            name: alluxio-config
        ports:
        - containerPort: 19998
          name: rpc
        - containerPort: 19999
          name: web
        volumeMounts:
        - name: secret-alluxio-hdfs-config-volume
          mountPath: /secrets/hdfsConfig
          readOnly: true
      - name: alluxio-job-master
        image: alluxio/alluxio:2.1.0-SNAPSHOT
        imagePullPolicy: IfNotPresent
        resources:
          limits:
            cpu: 1
            memory: 1024M
          requests:
            cpu: 1
            memory: 1024M
        securityContext:
          runAsUser: 1000
          runAsGroup: 1000
        command: ["/entrypoint.sh"]
        args: ["job-master"]
        envFrom:
        - configMapRef:
            name: alluxio-config
        ports:
        - containerPort: 20001
          name: job-rpc
        - containerPort: 20002
          name: job-web
        volumeMounts:
        - name: secret-alluxio-hdfs-config-volume
          mountPath: /secrets/hdfsConfig
          readOnly: true
      restartPolicy: Always
      volumes:
      - name: secret-alluxio-hdfs-config-volume
        secret:
          secretName: alluxio-hdfs-config
          defaultMode: 256
---

